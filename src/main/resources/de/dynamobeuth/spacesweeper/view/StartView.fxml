<?xml version="1.0" encoding="UTF-8"?>

<?import de.dynamobeuth.spacesweeper.component.SoundComponent?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane fx:id="root" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
           prefHeight="700.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/8.0.131"
           xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.dynamobeuth.spacesweeper.controller.StartController">
    <children>
        <BorderPane>
            <top>
                <HBox alignment="CENTER_RIGHT" prefHeight="50.0" prefWidth="200.0">
                    <Button fx:id="closeButton" styleClass="close-button" alignment="TOP_RIGHT" mnemonicParsing="false" onAction="#exitGame" prefHeight="32" prefWidth="32"/>
                    <padding>
                        <Insets left="10.0" right="10.0"/>
                    </padding>
                </HBox>
            </top>
            <left>
                <VBox prefHeight="200.0" prefWidth="300.0" BorderPane.alignment="CENTER"/>
            </left>
            <right>
                <VBox prefHeight="200.0" prefWidth="300.0" BorderPane.alignment="CENTER">
                    <children>
                    </children>
                </VBox>
            </right>
            <bottom>
                <HBox alignment="BOTTOM_RIGHT">
                    <children>
                        <SoundComponent/>
                    </children>
                    <padding>
                        <Insets bottom="10.0" right="10.0"/>
                    </padding>
                </HBox>
            </bottom>
            <center>
                <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                    <children>
                        <Button fx:id="btnStartGame" mnemonicParsing="true" onAction="#showGameScreenAction"
                                text="_Spiel starten"/>
                        <Button fx:id="btnHighscore" mnemonicParsing="true" onAction="#showHighscoreScreenAction"
                                text="_Highscore"/>
                    </children>
                </HBox>
            </center>
        </BorderPane>
    </children>
</StackPane>
