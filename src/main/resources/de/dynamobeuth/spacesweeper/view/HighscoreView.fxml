<?xml version="1.0" encoding="UTF-8"?>

<?import de.dynamobeuth.spacesweeper.component.SoundComponent?>
<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<StackPane fx:id="root" prefHeight="200.0" prefWidth="200.0" xmlns="http://javafx.com/javafx/8.0.131"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="de.dynamobeuth.spacesweeper.controller.HighscoreController">
    <children>
        <BorderPane>
            <top>
                <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0">
                    <Button fx:id="closeButton" alignment="TOP_RIGHT" mnemonicParsing="false"/>
                    <Pane HBox.hgrow="ALWAYS"/>
                    <Button fx:id="homeButton" alignment="TOP_RIGHT" mnemonicParsing="false"/>
                    <padding>
                        <Insets left="10.0" right="10.0"/>
                    </padding>
                </HBox>
            </top>
            <left>
                <VBox prefHeight="200.0" prefWidth="300.0" BorderPane.alignment="CENTER"/>
            </left>
            <right>
                <VBox prefHeight="200.0" prefWidth="300.0" BorderPane.alignment="CENTER"/>
            </right>
            <bottom>
                <HBox alignment="BOTTOM_RIGHT" prefHeight="50.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                    <SoundComponent>
                        <HBox.margin>
                            <Insets right="10.0" top="10.0"/>
                        </HBox.margin>
                    </SoundComponent>
                </HBox>
            </bottom>
            <center>
                <TableView fx:id="tableView" prefHeight="500.0" prefWidth="100.0">
                    <placeholder>
                        <Label text="test"/>
                    </placeholder>
                    <columns>
                        <TableColumn fx:id="rankColumn" editable="false" prefWidth="50.0" resizable="false"
                                     sortable="false"
                                     text="#">
                            <cellValueFactory>
                                <PropertyValueFactory property="rank"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn editable="false" prefWidth="350.0" resizable="false" sortable="false" text="Name">
                            <cellValueFactory>
                                <PropertyValueFactory property="name"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="scoreColumn" editable="false" prefWidth="100.0" resizable="false"
                                     text="Score">
                            <cellValueFactory>
                                <PropertyValueFactory property="score"/>
                            </cellValueFactory>
                        </TableColumn>
                    </columns>
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                        </FXCollections>
                    </items>
                </TableView>
            </center>
        </BorderPane>
    </children>
</StackPane>
