<?xml version="1.0" encoding="UTF-8"?>

<?import de.dynamobeuth.spacesweeper.component.SoundComponent?>
<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Label?>
<StackPane fx:id="root" prefHeight="700.0" prefWidth="900.0" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.dynamobeuth.spacesweeper.controller.HighscoreController">
    <BorderPane>
        <top>
            <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0">
                <Button fx:id="homeButton" alignment="TOP_RIGHT" mnemonicParsing="false" onAction="#backHome" prefHeight="32" prefWidth="32" styleClass="home-button" />
                <Pane HBox.hgrow="ALWAYS" />
                <Button fx:id="closeButton" alignment="TOP_RIGHT" mnemonicParsing="false" onAction="#exitGame" prefHeight="32" prefWidth="32" styleClass="close-button" />
                <padding>
                    <Insets left="10.0" right="10.0" />
                </padding>
            </HBox>
        </top>
        <left>
            <VBox BorderPane.alignment="CENTER" />
        </left>
        <right>
            <VBox BorderPane.alignment="CENTER" />
        </right>
        <bottom>
            <HBox alignment="BOTTOM_RIGHT" prefHeight="50.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                <SoundComponent>
                    <HBox.margin>
                        <Insets right="10.0" top="10.0" />
                    </HBox.margin>
                </SoundComponent>
            </HBox>
        </bottom>
        <center>
            <VBox alignment="CENTER" prefHeight="650.0" prefWidth="700.0" BorderPane.alignment="CENTER" spacing="50">
                <TableView fx:id="tableView" maxWidth="700" StackPane.alignment="CENTER">
                    <placeholder>
                        <Label text="L A D E    D A T E N   . . ."/>
                    </placeholder>
                    <columns>
                        <TableColumn fx:id="rankColumn" styleClass="rank-cell" editable="false" resizable="false" sortable="false" text="Rang">
                            <cellValueFactory>
                                <PropertyValueFactory property="rank" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn styleClass="name-cell" editable="false" resizable="false" sortable="false" text="Name">
                            <cellValueFactory>
                                <PropertyValueFactory property="name" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn styleClass="score-cell" fx:id="scoreColumn" editable="false" resizable="false" text="Punkte">
                            <cellValueFactory>
                                <PropertyValueFactory property="score" />
                            </cellValueFactory>
                        </TableColumn>
                    </columns>
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                        </FXCollections>
                    </items>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
                </TableView>
                <Button fx:id="btnNewGame" mnemonicParsing="true" onAction="#newGame" styleClass="start-game-button" text="N E U E S   S P I E L" />
            </VBox>
        </center>
    </BorderPane>
</StackPane>
